<% layout("/layouts/boilerplate") %>

  <body>
    <style>
      
      .filters-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
       
        flex-wrap: nowrap;
       
        gap: 1rem;
      }

      
      #filters-container {
        flex: 1;
       
        overflow-x: auto;
        
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch;
       
      }

      #filters {
        display: flex;
        flex-wrap: nowrap;
       
        gap: 1rem;
      }

      .filter {
        flex: 0 0 auto;
       
        text-align: center;
        opacity: 0.8;
        transition: opacity 0.3s ease-in-out;
        cursor: pointer;
      }

      .filter:hover {
        opacity: 1;
      }

      
      #filters-container::-webkit-scrollbar {
        display: none;
      }

      #filters-container {
        -ms-overflow-style: none;
       
        scrollbar-width: none;
       
      }

     
      .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        padding: 0.5rem 1rem;
        display: flex;
        align-items: center;
        white-space: nowrap;
      }

      .form-switch {
        display: flex;
        align-items: center;
        padding-left: 0 !important;
      }

      .tax-toggle .form-check-label {
        white-space: nowrap;
        margin-bottom: 0;
        line-height: 1.25rem;
      }

      .tax-toggle .form-check-input {
        margin-top: 0;
        margin-left: 0.5rem;
      }

      .navbar-collapse {
        background-color: white !important;
     
        padding: 1rem;
       
        border-radius: 0.5rem;
      
      }

     
      .dropdown-menu {
        background-color: white !important;
      }

      .navbar-collapse {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .navbar-collapse {
        z-index: 9999;
       
      }

      @media (max-width: 768px) {
        .tax-toggle {
          padding: 0.25rem 0.5rem;
          
          font-size: 0.85rem;
          
          flex-shrink: 1;
          
        }

        .tax-toggle .form-check-label {
          font-size: 0.85rem;
          
          white-space: nowrap;
        }

        .tax-toggle .form-check-input {
          width: 1rem;
          
          height: 1rem;
        }
      }
    </style>

    <div class="row mb-4">

      <div class="col-12">
        <div class="filters-row d-flex align-items-center">
          <div id="filters-container" class="flex-grow-1 me-3">
            <div id="filters">
              <div class="filter">
                <a href="/listings/filter/Rooms">
                  <div><i class="fa-solid fa-bed"></i></div>
                  <p>Rooms</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Iconic cities">
                  <div><i class="fa-solid fa-mountain-city"></i></div>
                  <p>Iconic Cities</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Trending">
                  <div><i class="fa-solid fa-fire"></i></div>
                  <p>Trending</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Mountains">
                  <div><i class="fa-solid fa-mountain-sun"></i></div>
                  <p>Mountains</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Castles">
                  <div><i class="fa-brands fa-fort-awesome"></i></div>
                  <p>Castles</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Amazing pools">
                  <div><i class="fa-solid fa-person-swimming"></i></div>
                  <p>Amazing Pools</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Camping">
                  <div><i class="fa-solid fa-campground"></i></div>
                  <p>Camping</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Farms">
                  <div><i class="fa-solid fa-cow"></i></div>
                  <p>Farm</p>
                </a>
              </div>

              <div class="filter">
                <a href="/listings/filter/Arctic">
                  <div><i class="fa-solid fa-snowflake"></i></div>
                  <p>Arctic</p>
                </a>
              </div>
            </div>
          </div>


          <div class="tax-toggle">
            <div class="form-check form-switch">
              <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- <h3>All Listings</h3> -->
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-2">
      <% for(let listings of allListings){ %>
        <a href="/listings/<%= listings._id  %>" class="listing-link">
          <div class="card col">
            <img src="<%= listings.image.url %>" class="card-img-top" alt="..." style="height: 20rem" />
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= listings.title %>
                </b>
                <br />
                &#8377;<%= listings.price.toLocaleString("en-IN") %>/night
                  <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
              </p>
            </div>
          </div>
        </a>
        <% } %>
    </div>
    <script>
      const taxSwitch = document.getElementById("flexSwitchCheckDefault");
      taxSwitch.addEventListener("change", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (info of taxInfo) {
          if (info.style.display !== "inline") {
            info.style.display = "inline";
          } else {
            info.style.display = "none";
          }
        }
      });
    </script>
  </body>