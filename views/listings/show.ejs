<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row mt-3">
      <div class="col-12 col-md-8 offset-md-3 col-lg-6 offset-lg-3">
        <h3>
          <%= listing.title %>:
        </h3>
      </div>
      <div class="card col-12 col-md-8 offset-md-3 col-lg-6 offset-lg-3 show-card mb-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img larger-img" alt="..." />
        <div class="card-body">
          <p class="card-text">
          <p>Owned by : <i><b>
                <%= listing.owner.username %>
              </b></i></p>
          <p>
            <%= listing.description %>
          </p>
          <p>&#8377;<%= listing.price.toLocaleString("en-IN") %>
          </p>
          <p>
            <%= listing.location %>
          </p>
          <p>
            <%= listing.country %>
          </p>
          </p>
        </div>
      </div>
      <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>
        <div class="d-flex justify-content-start align-items-center gap-2 mt-3 mb-3 offset-md-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4 edit-btn">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="m-0">
            <button class="btn btn-dark px-4">Delete</button>
          </form>
        </div>
        <% } %>

          <div class="col-12 col-md-8 offset-md-3 col-lg-8 offset-lg-3">
            <hr class="my-4" />

            <% if (currentUser) { %>
              <h4 class="mb-3">Leave a Review</h4>

              <form action="/listings/<%= listing._id %>/reviews" class="needs-validation" method="POST" novalidate>


                <!-- <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]" /> -->
                <!-- </div> -->
                <div class="mb-3">
                  <label for="rating" class="form-label">Rating</label>
                  <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label">Comments</label>
                  <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
                </div>

                <button class="btn btn-outline-dark btn-sm mb-3">Submit</button>
              </form>

              <hr class="my-4" />
              <% } %>

                <h4 class="mb-4">All Reviews</h4>

                <% if (listing.reviews.length===0) { %>
                  <div class="alert alert-info text-center keep-alert ">
                    <p class="mb-1">No Reviews Yet!</p>
                    <small>Be the first person to review this listing.</small>
                  </div>
                  <% } else { %>
                    <div class="row gx-5 gy-0 my-5">
                      <% listing.reviews.forEach(review=> { %>
                        <div class="col-md-6 col-lg-4  mb-3">
                          <div class="card h-100 shadow-sm d-flex flex-column">
                            <div class="card-body d-flex flex-column">

                              <!-- Top: User and Rating -->
                              <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                  <strong>@<%= review.author.username %></strong>
                                  <div class="fs-5">

                                    <% for(let i=0; i < review.rating; i++) { %> <span
                                        class="text-warning">&#9733;</span>
                                      <% } %>
                                        <% for(let i=review.rating; i < 5; i++) { %> <span
                                            class="text-secondary">&#9734;</span>
                                          <% } %>

                                  </div>
                                </div>
                                <small class="text-muted">
                                  <%= new Date(review.createdAt).toLocaleDateString() %>
                                </small>
                              </div>

                              <!-- Comment -->
                              <p class="mb-3">
                                <%= review.comment %>
                              </p>

                              <!-- Delete Button -->
                              <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                                <div class="mt-auto text-end">
                                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                    method="POST">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                  </form>
                                </div>
                                <% } %>
                            </div>
                          </div>
                        </div>
                        <% }) %>
                    </div>
                    <% } %>
          </div>
          <div class="col-12 col-md-8 offset-md-3 col-lg-8 offset-lg-3">
            <h3>Where you'll be</h3>
            <div id="map" data-lat="<%= listing.geometry.coordinates[1] %>"
              data-lng="<%= listing.geometry.coordinates[0] %>" data-title="<%= listing.title %>"
              style="width:80%; height:400px; margin:auto;" class="mb-4">
            </div>
          </div>
    </div>
  </body>