<% layout("/layouts/boilerplate") %>

    <body>
        <br>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Create a new Listing</h3>
                <form method="post" action="/listings" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Enter title" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Title is required</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                    <div class="mb-3">
                        <label for="categories" class="form-label"><b>Categories</b></label>
                        <select class="selectpicker" id="categories" name="listing[categories][]" multiple
                            data-live-search="true" data-actions-box="true" title="Select categories">
                            <option value="Trending">Trending</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Iconic cities">Iconic cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Castles">Castles</option>
                            <option value="Amazing pools">Amazing pools</option>
                            <option value="Camping">Camping</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" placeholder="Enter image URL/LINK" class="form-control" type="file"
                            required>

                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control"
                                required>
                            <div class="invalid-feedback">Price should be valid</div>
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="maxGuests" class="form-label">Max Guests</label>
                            <input name="listing[maxGuests]" placeholder="Enter maximum guests" type="number"
                                class="form-control" min="1" required>
                            <div class="invalid-feedback">Please enter maximum number of guests</div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control"
                                required>
                            <div class="invalid-feedback">Country name should be valid</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Enter location" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <button class="btn btn-dark addbtn">add</button>
                    <br><br>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                $('.selectpicker').selectpicker();
            });
        </script>
    </body>